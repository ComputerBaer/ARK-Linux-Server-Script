#!/bin/bash

# Version Checker 
installserver_Current="1.2.2"

function installServer {

    installSteam

    # Install Server Files
    echo -e "$YELLOW Now installing game server. This may take a while. $RESET"
    runSteam 1

    echo -e "$GREEN Complete. Exiting. $RESET"
    echo -e " You may now start the server with $GREEN ./arkserver.sh start $RESET"

}
